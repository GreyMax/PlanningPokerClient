<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<GridPane fx:controller="planning.poker.client.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">

    <TextField fx:id="optimisticField" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <TextField fx:id="pessimisticField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
    <TextField fx:id="moreLikelyField" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
    <Button fx:id="submitButton" GridPane.rowIndex="1" GridPane.columnIndex="2" onAction="#submitEstimate"/>
</GridPane>